<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@layout/mainframe_playlist_add_song" style="@style/fill_vertical"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/edit_bar" android:focusable="false" android:layout_below="@id/titlebar" style="@style/fill_width">
        <include layout="@layout/editbar_add_playlist" />
    </LinearLayout>
    <LinearLayout android:id="@id/tab_bar" android:focusable="false" android:layout_below="@id/edit_bar" style="@style/fill_width">
        <include layout="@layout/tabbar_add_playlist" />
    </LinearLayout>
    <LinearLayout android:id="@id/list_add_playlist_song" android:layout_below="@id/tab_bar" style="@style/fill_equal_width_vertical">
        <LinearLayout android:id="@id/no_list_item" style="@style/fill">
            <include layout="@layout/no_item_list" />
        </LinearLayout>
        <include layout="@layout/menu_playlist_add_song" />
        <FrameLayout style="@style/fill">
            <ListView android:scrollbarThumbVertical="@drawable/scrollbar_thumb" android:id="@id/list" android:nextFocusLeft="@id/list" android:nextFocusRight="@id/list" android:nextFocusUp="@id/list" android:nextFocusDown="@id/list" android:fadeScrollbars="false" style="@style/list_item">
                <requestFocus />
            </ListView>
            <include layout="@layout/list_indexer" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>