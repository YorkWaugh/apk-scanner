<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@layout/setting_ringtone" style="@style/fill_vertical"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" style="@style/subtitlebar_bg">
        <LinearLayout android:orientation="horizontal" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="3.0">
            <TextView android:gravity="center_vertical" android:id="@id/settinng_ringtone_subtitle" android:layout_height="fill_parent" style="@style/subtitle" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="fill_parent">
            <Button android:id="@id/set_ringtone" android:focusable="false" android:text="@string/dlg_button_set" style="@style/subtitle_setting_bnt" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@id/list_setting_ringtone" style="@style/fill_vertical">
        <FrameLayout style="@style/fill">
            <ListView android:scrollbarThumbVertical="@drawable/scrollbar_thumb" android:id="@id/list_setting_ringtone_list" android:fadeScrollbars="false" style="@style/list_item" />
            <include layout="@layout/list_indexer" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>