<?xml version="1.0" encoding="utf-8"?>
<com.nttdocomo.android.mediaplayer.view.VideoPlayerViewLayout android:id="@id/videoPlayerView" style="@style/fill_vertical"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/layer_portrait" style="@style/fill_vertical">
        <FrameLayout android:id="@id/view" style="@style/equal_width">
            <ImageView android:id="@id/thumbnail" android:background="@android:color/black" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            <LinearLayout android:id="@id/surfaceViewHolder" style="@style/equal_width">
                <SurfaceView android:id="@id/surfaceView" android:background="@android:color/black" android:layout_width="1.0dip" android:layout_height="1.0dip" />
            </LinearLayout>
            <include android:visibility="gone" layout="@layout/player_video_ctrl_seek_portrait" />
            <include layout="@layout/player_brightness_bar" />
            <include layout="@layout/replayback" />
            <include android:visibility="gone" layout="@layout/player_video_ctrl_trickplay_portrait" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout android:id="@id/layer_landscape" style="@style/fill_vertical">
        <include android:visibility="gone" layout="@layout/player_video_ctrl_seek_landscape" />
        <LinearLayout style="@style/equal_width_vertical">
            <LinearLayout android:orientation="vertical" android:id="@id/top_wrapper" style="@style/fill_vertical" />
        </LinearLayout>
        <include android:visibility="gone" android:layout_alignParentBottom="true" layout="@layout/player_video_ctrl_trickplay_landscape" />
    </LinearLayout>
</com.nttdocomo.android.mediaplayer.view.VideoPlayerViewLayout>