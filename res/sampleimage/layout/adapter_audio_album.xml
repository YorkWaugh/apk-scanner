<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/fill_width_vertical"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/listdivider" />
    <LinearLayout android:orientation="horizontal" android:id="@id/lockmargin" android:visibility="gone" style="@style/adapter_large" />
    <LinearLayout android:orientation="horizontal" android:id="@id/adapter_album_lay" style="@style/adapter_large">
        <FrameLayout android:id="@id/frame_thumbnail" style="@style/list_thumbnail">
            <ImageView android:background="@color/none" style="@style/fill" />
            <ImageView android:id="@id/thumbnail" style="@style/fill" />
        </FrameLayout>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
            <TextView android:textStyle="bold" android:id="@id/album" android:layout_marginLeft="6.5dip" android:layout_marginRight="22.0dip" style="@style/fill_width_text" />
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:id="@id/artist" android:layout_marginLeft="6.5dip" android:layout_weight="1.0" style="@style/wrap_text_w_matcn" />
                <TextView android:id="@id/total_songs" android:layout_marginLeft="6.5dip" android:layout_marginRight="22.0dip" style="@style/wrap_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/adapter_album_song_lay" style="@style/adapter_large">
        <ImageView android:id="@id/is_play" android:background="@drawable/playmark" android:layout_marginLeft="6.5dip" style="@style/wrap" />
        <LinearLayout android:layout_marginLeft="6.5dip" android:layout_marginRight="6.5dip" style="@style/wrap_equal_width_vertical">
            <TextView android:textStyle="bold" android:id="@id/title" android:layout_marginLeft="6.5dip" android:layout_marginRight="6.5dip" android:layout_weight="1.0" style="@style/wrap_text_w_matcn" />
            <TextView android:id="@id/song_artist" android:layout_marginLeft="22.0dip" style="@style/wrap_text" />
        </LinearLayout>
        <ImageView android:id="@id/longmenu_btn" android:background="@drawable/shortcut_menu_button" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginRight="4.0dip" />
        <TextView android:id="@id/duration" android:layout_marginRight="10.5dip" style="@style/wrap_text" />
    </LinearLayout>
</LinearLayout>