<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:id="@id/dlg_albuminfo_title" android:baselineAligned="false" style="@style/adapter_large"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/frame_thumbnail" style="@style/list_thumbnail">
        <ImageView android:background="@color/none" style="@style/fill" />
        <ImageView android:id="@id/thumbnail" style="@style/fill" />
    </FrameLayout>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textStyle="bold" android:id="@id/album" android:layout_width="fill_parent" android:layout_marginLeft="6.5dip" android:layout_weight="1.0" style="@style/wrap_text_w_matcn" />
            <TextView android:id="@id/total_songs" android:layout_width="wrap_content" android:layout_marginRight="4.0dip" style="@style/wrap_text" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/display_artist" android:layout_width="fill_parent" android:layout_marginLeft="6.5dip" android:layout_weight="1.0" style="@style/wrap_text_w_matcn" />
            <TextView android:gravity="right" android:id="@id/total_duration" android:layout_width="wrap_content" android:layout_marginRight="4.0dip" style="@style/wrap_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>