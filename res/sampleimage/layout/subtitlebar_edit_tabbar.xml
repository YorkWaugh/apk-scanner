<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/playlist_edit_name" style="@style/subtitlebar_bg"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" style="@style/subtitle_bg">
        <ImageView android:id="@id/subtitle_mark" android:background="@drawable/playlist_icon_edit" style="@style/wrap" />
        <TextView android:id="@id/subtitle" style="@style/playlist_name" />
    </LinearLayout>
    <LinearLayout style="@style/subtitle_edit_bnt_bg">
        <Button android:id="@id/tabbar_edit_reset" android:focusable="false" android:text="@string/app_button_reset" style="@style/subtitle_edit_bnt_tabbar" />
        <Button android:id="@id/tabbar_edit_complete" android:focusable="false" android:text="@string/app_button_decide" style="@style/subtitle_edit_bnt_tabbar" />
    </LinearLayout>
</FrameLayout>